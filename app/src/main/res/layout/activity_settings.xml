<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="#2949fd">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/change_the_weight_of_each_category_in_percent"
        android:id="@+id/textViewOverallAverage"
        android:foregroundTint="#000000"
        android:textColorHighlight="#000000"
        android:textColor="#fefefe"
        android:textColorHint="#ff0000"
        android:textSize="20dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/editTextKWeight"
        android:text="@string/_30"
        android:layout_alignBottom="@+id/textView7"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/editTextTWeight"
        android:text="@string/_20"
        android:layout_alignBottom="@+id/textView8"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/editTextCWeight"
        android:text="@string/_20communication"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/editTextAWeight"
        android:text="@string/_30application"
        android:layout_marginTop="43dp"
        android:layout_below="@+id/editTextCWeight"
        android:layout_alignParentEnd="true"
        android:textSize="18dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/knowledge"
        android:id="@+id/textView7"
        android:layout_below="@+id/textViewOverallAverage"
        android:layout_alignParentStart="true"
        android:layout_marginTop="45dp"
        android:textSize="18dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/thinking"
        android:id="@+id/textView8"
        android:layout_above="@+id/editTextCWeight"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="43dp"
        android:textSize="18dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/communication"
        android:id="@+id/textView10"
        android:textSize="18dp"
        android:layout_alignBottom="@+id/editTextCWeight"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/application"
        android:id="@+id/textView11"
        android:layout_alignBottom="@+id/editTextAWeight"
        android:layout_alignParentStart="true"
        android:textSize="18dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnChangeWeight"
        android:src="@drawable/checkmark"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:contentDescription="@string/check_mark" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/apply_changes"
        android:id="@+id/textView12"
        android:layout_above="@+id/btnChangeWeight"
        android:layout_centerHorizontal="true" />

</RelativeLayout>