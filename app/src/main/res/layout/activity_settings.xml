<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="#2949fd">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Change The Weight of Each Category (in percent)"
        android:id="@+id/textViewOverallAverage"
        android:foregroundTint="#000000"
        android:textColorHighlight="#000000"
        android:textColor="#fefefe"
        android:textColorHint="#ff0000"
        android:textSize="20dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/editTextKWeight"
        android:text="30"
        android:layout_alignBottom="@+id/textView7"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/editTextTWeight"
        android:text="20"
        android:layout_alignBottom="@+id/textView8"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/editTextCWeight"
        android:text="20"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/editTextAWeight"
        android:text="30"
        android:layout_marginTop="43dp"
        android:layout_below="@+id/editTextCWeight"
        android:layout_alignParentEnd="true"
        android:textSize="18dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Knowledge"
        android:id="@+id/textView7"
        android:layout_below="@+id/textViewOverallAverage"
        android:layout_alignParentStart="true"
        android:layout_marginTop="45dp"
        android:textSize="18dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Thinking"
        android:id="@+id/textView8"
        android:layout_above="@+id/editTextCWeight"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="43dp"
        android:textSize="18dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Communication"
        android:id="@+id/textView10"
        android:textSize="18dp"
        android:layout_alignBottom="@+id/editTextCWeight"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Application"
        android:id="@+id/textView11"
        android:layout_alignBottom="@+id/editTextAWeight"
        android:layout_alignParentStart="true"
        android:textSize="18dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnChangeWeight"
        android:src="@drawable/checkmark"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Apply Changes"
        android:id="@+id/textView12"
        android:layout_above="@+id/btnChangeWeight"
        android:layout_centerHorizontal="true" />

</RelativeLayout>